<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/playerNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Other TextViews -->

<TextView
        android:id="@+id/teamNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team Name"
        android:textSize="16sp"
        android:textColor="@color/Gray" />

    <TextView
        android:id="@+id/matchesPlayedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matches Played: "
        android:textSize="16sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/totalRunsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Runs: "
        android:textSize="16sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/centuriesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Centuries: "
        android:textSize="16sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/halfCenturiesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Half-Centuries: "
        android:textSize="16sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/battingAverageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Batting Average: "
        android:textSize="16sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/bowlingAverageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bowling Average: "
        android:textSize="16sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/strikeRateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Strike Rate: "
        android:textSize="16sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/economyRateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Economy Rate: "
        android:textSize="16sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/wicketsTakenTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wickets Taken: "
        android:textSize="16sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/catchesTakenTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Catches Taken: "
        android:textSize="16sp"
        android:textColor="@color/black" />

</LinearLayout>

    </ScrollView>

